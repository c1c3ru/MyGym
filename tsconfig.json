{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "es2020",
    "moduleResolution": "bundler",
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/presentation/components/*"
      ],
      "@screens/*": [
        "./src/presentation/screens/*"
      ],
      "@infrastructure/*": [
        "./src/infrastructure/*"
      ],
      "@utils/*": [
        "./src/shared/utils/*"
      ],
      "@hooks/*": [
        "./src/presentation/hooks/*"
      ],
      "@contexts/*": [
        "./src/presentation/contexts/*"
      ],
      "@stores/*": [
        "./src/presentation/stores/*"
      ],
      "@navigation/*": [
        "./src/presentation/navigation/*"
      ],
      "@types/*": [
        "./src/types/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**/*",
    "**/node_modules/**",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "scripts/**",
    "docs/**",
    "src/presentation/screens/examples/**",
    "build",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**"
  ]
}